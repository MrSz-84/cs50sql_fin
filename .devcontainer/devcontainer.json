// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "cs50sql_fin",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/warrenbuckley/codespace-features/sqlite:1": {},
		"ghcr.io/robbert229/devcontainer-features/postgresql-client:1": {
			"version": "15"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/git-lfs:1": {
			"autoPull": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "3.12"
		},
		"ghcr.io/devcontainers-contrib/features/apt-get-packages:1": {
			"clean_ppas": true,
			"preserve_apt_list": true,
			"packages": "htop",
			"ppas": "ppa:deadsnakes/ppa"
		},
		"ghcr.io/devcontainers-contrib/features/apt-packages:1": {
			"clean_ppas": true,
			"preserve_apt_list": true,
			"packages": "htop",
			"ppas": "ppa:deadsnakes/ppa"
		},
		"ghcr.io/devcontainers-contrib/features/devcontainers-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/npm-package:1": {
			"package": "typescript",
			"version": "latest"
		},
		"ghcr.io/stuartleeks/dev-container-features/dev-tunnels:0": {},
		"ghcr.io/akhildevelops/devcontainer-features/apt:0": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		},
		"ghcr.io/eliises/devcontainer-features/devcontainers-cli:1": {
			"version": "latest",
			"nodeVersion": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"batisteo.vscode-django",
                "njpwerner.autodocstring",
				"franneck94.vscode-cpython-extension-pack",
				"ms-azuretools.vscode-docker",
				"ms-azuretools.vscode-docker",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"ms-python.isort",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-vscode.live-server",
				"inferrinizzard.prettier-sql-vscode",
				"VisualStudioExptTeam.vscodeintellicode",
				"dbaeumer.vscode-eslint",
				"donjayamanne.githistory",
				"GitHub.vscode-pull-request-github",
				"oderwat.indent-rainbow",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				"KevinRose.vsc-python-indent",
				"benjamin-simmonds.pythoncpp-debug",
				"ms-toolsai.jupyter-keymap",
				"wholroyd.jinja",
				"donjayamanne.python-environment-manager",
				"mechatroner.rainbow-csv",
				"donjayamanne.python-extension-pack",
				"tcwalther.cython",
				"ms-vscode.cpptools",
				"ms-python.autopep8",
				"alexcvzz.vscode-sqlite",
				"ms-vscode-remote.vscode-remote-extensionpack"
			]
		}
	},
	"forwardPorts": [3000, 5000, 5432]
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	// "forwardPorts": [5000, 5432],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
